@model Vidly.Models.Customer


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership: @Model.MembershipType.Name </li>  
    @*Use have value to check if its null*@
    @if (Model.BirthDate.HasValue) 
    {
        <li> Birthday: @Model.BirthDate.Value.ToShortDateString()</li>
    }



</ul>

